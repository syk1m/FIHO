<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:background="#E1E1E1">

        <TextView
            android:id="@+id/fhomebtn"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#E1E1E1"
            android:textSize="32dp"
            android:textColor="#000000"
            android:text="Find Home"
            android:clickable="true"
            android:fontFamily="@font/nanumroundeb" />

        <TextView
            android:id="@+id/fhomedes"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#E1E1E1"
            android:text="Map &amp; Housing"
            android:fontFamily="@font/nanumroundr"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:id = "@+id/findHope"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:background="#E1E1E1">

        <TextView
            android:id="@+id/fhopebtn"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#E1E1E1"
            android:textStyle="bold"
            android:textSize="32dp"
            android:textColor="#000000"
            android:text="Find Hope"
            android:clickable="true"
            android:fontFamily="@font/nanumroundeb"/>

        <TextView
            android:id="@+id/fhopedes"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#E1E1E1"
            android:text="Employment, Education &amp; Finance"
            android:fontFamily="@font/nanumroundr"/>
    </LinearLayout>
</LinearLayout>