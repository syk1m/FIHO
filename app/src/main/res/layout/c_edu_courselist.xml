<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/courselist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E1E1E1"
        android:clickable="true"
        android:gravity="center"
        android:text="Online Course"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/nanumroundeb"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/course1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ministry of Economy and Finance"
                android:textColor="#000000"
                android:fontFamily="@font/nanumroundb"
                android:clickable="true"/>

            <WebView
                android:id="@+id/c1wv"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/course2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Coursera"
                android:textColor="#000000"
                android:fontFamily="@font/nanumroundb"
                android:clickable="true"/>

            <WebView
                android:id="@+id/c2wv"
                android:layout_width="match_parent"
                android:layout_height="200dp" >

            </WebView>

            <TextView
                android:id="@+id/course3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="edX"
                android:textColor="#000000"
                android:fontFamily="@font/nanumroundb"
                android:clickable="true"/>

            <WebView
                android:id="@+id/c3wv"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>