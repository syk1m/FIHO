<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fhometitle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="80dp"
            android:background="#E1E1E1"
            android:gravity="center"
            android:text="Find Home"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/profilebtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="55dp"
            android:background="ffffffff"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/profilebtn" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cityprovince"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:text="City/Province"
            android:textSize="07dp" />

        <Button
            android:id="@+id/citygungu"
            android:layout_width="110dp"
            android:layout_marginLeft="20dp"
            android:layout_height="35dp"
            android:text="City/Gun/Gu"
            android:textSize="07dp"/>

        <Button
            android:id="@+id/eupmyeondong"
            android:layout_width="110dp"
            android:layout_marginLeft="20dp"
            android:layout_height="35dp"
            android:text="Eup/myeon/dong"
            android:textSize="07dp"
            />
    </LinearLayout>

</LinearLayout>